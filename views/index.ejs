      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Emp Type</th>
        <th>Hourly Rate</th>
        <th>Total Hours</th>
        <th>Total Amount</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
        <%if(records.length >0){%>
          <% records.forEach(function(row){%>
        <tr>
          <td><%= row.name%></td>
          <td><%= row.email%></td>
          <td><%= row.etype%></td>
          <td><%= row.hourlyrate%></td>
          <td><%= row.totalHour%></td>
          <td><%= row.total%></td>
          <td><a class="btn btn-primary btn-xs" href="/edit/<%= row._id%>"><i class="fa fa-edit"></i></a>
            <a class="btn btn-danger btn-xs" href="/delete/<%= row._id%>"><i class="fa fa-trash"></i></a>
          </td>
        </tr>
          <%})}else{%>
            <tr>
              <td colspan="6">NO. RECORDS FOUND</td>
            </tr>
            <%}%>
      </tbody>
    </table>
