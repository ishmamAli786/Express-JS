    <form action='/search' method="post">
      <label for="byname">By Name: </label>
      <input type="text" id="byname" name="byname" placeholder="Enter Your Name Here">
      <label for="byemail">By Email: </label>
      <input type="text" id="byemail" name="email" placeholder="Enter Your Email Here">
      <input class="btn btn-success" type="submit" name="submit" value="submit">
    </form>
    </div>
    <div class="container">
